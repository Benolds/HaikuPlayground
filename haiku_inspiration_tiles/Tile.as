package{	import flash.display.MovieClip;	import flash.events.Event;	import flash.display.Stage;	import flash.events.MouseEvent;	public class Tile extends MovieClip{		public var row:int;		public var col:int;		public var word:String;		public var tileState:String;		public function Tile(_row:int, _col:int, _word:String){			row = _row;			col = _col;			word = _word;			tileState = "available";			tileBack.gotoAndStop(tileState);			var leftMargin = 20;			var topMargin = 85;			x = width * col + leftMargin;			y = height * row + topMargin;			txtWord.text = word;		}				public function updateState(_givenTileRow, _givenTileCol, _givenTileState, _syllableCount, _maxSyllables):void {			if ( (Math.abs(row - _givenTileRow) <= 1) && (Math.abs(col - _givenTileCol) <= 1) ) {				if(_givenTileState == "selected" && tileState == "unavailable") {					tileState = "available";}			} else {				if(_givenTileState == "selected" && tileState == "available") {					tileState = "unavailable";}			}			if(_syllableCount > _maxSyllables) {				if(tileState == "available"){				tileState = "unavailable";}			}			tileBack.gotoAndStop(tileState);		}	}}